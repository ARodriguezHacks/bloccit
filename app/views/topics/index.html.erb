<div class="container">
  <h1>Topics</h1>
  <h4>Select a topic to get started!
  </h4>
  <div class="row">
    <div class="col-md-9">
      <% @topics.each do |topic| %>
        <div class="media">
          <div class="media-body border p-3 mb-3 shadow">
            <h4 class="media-heading">
              <%= link_to topic.name, topic %>
            </h4>
            <small>
              <%= topic.description %>
            </small>
          </div>
        </div>
      <% end %>
    </div>
    <% if user_is_authorized_for_topics? %>
      <div class="col-md-4">
        <%= link_to "New Topic", new_topic_path, class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>
