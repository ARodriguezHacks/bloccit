<div class="container-fluid mt-4">
  <% if current_user %>
    <div class="row">
      <div class="col-sm-3 mx-2">
        <h2>Trending Topics</h2>
        <%= render partial: 'topics/topic', locals: { topic: @topic } %>
      </div>
      <div class="col-sm mx-2">
          <h2>Recent Posts</h2>
          <%= render current_user.posts.limit(5) %>
      </div>
      <div class="col-sm-3 mx-2 bg-light">
        <h2>Recent Activity</h2>
         <%= render partial: 'users/feed',  locals: { user: @user } %>
      </div>
    </div>
  <% else %>
      <div class="d-none d-sm-block">
        <div class="hero-section row">
          <%= image_tag('background-beach-starfish-hero-min.png', class: 'hero-image img-fluid', alt: 'TravelBucket-hero')%>
          <div class="hero-text">
            <h3>Travel, Excursion, Adventure. Find your people, share your stories</h3>
          </div>
        </div>
      </div>
      <div class="row m-4">
        <div class="d-lg-none media-body mt-3">
            <h5 class="row-text-2">TravelBucket is your online community for sharing images and posts to inspire your next adventure.</h5>
        </div>
         <%= image_tag("image-test-2-min.jpg", class: 'img-item img-fluid', alt: "TravelBucket Stock Image 1") %>
        <div class="d-none d-lg-block media-body pl-3 mt-3">
            <h5>TravelBucket is your online community for sharing images and posts to inspire your next adventure.</h5>
        </div>
      </div>
      <div class="row m-4">
        <div class="media-body mt-3">
          <h5 class="row-text-2 pt-lg-5">Create posts and comment on others</h5>
        </div>
        <%= image_tag("travelbucket-new-post-min.png", class: 'img-item img-fluid', alt: "TravelBucket Stock Image 1") %>
      </div>
      <div class="row m-4">
        <div class="media-body text-center">
          <h5>Save your Favorite Posts and Upvote/Downvote</h5>
        </div>
        <div class="text-center">
          <%= image_tag("favorites-votes-travelbucket-min.png", class: 'img-item img-fluid', alt: "TravelBucket Stock Image 1") %>
        </div>
      </div>
  <% end %>
</div>